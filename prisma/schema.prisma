generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}
model users {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(45)
  email     String   @unique
  password  String   @db.VarChar(200)
  secret_code String @db.VarChar(200)
  role      Role     @default(user)
  creation_date DateTime @default(now())
  update_date DateTime @updatedAt
  payments payments[]
  debts debts[]
}

model payments {
  id        Int     @id @default(autoincrement())
  price     Decimal @db.Decimal(10, 2)
  status    String  @db.VarChar(15) @default("paid")
  users_id  Int
  debts_id  Int
  creation_date DateTime @default(now())      
  update_date   DateTime @updatedAt 
  user users @relation(fields: [users_id], references: [id])
  debt debts @relation(fields: [debts_id], references: [id])
}

model debts {
  id          Int     @id @default(autoincrement())
  title       String  @db.VarChar(30)
  value       Decimal @db.Decimal(10, 2)
  description String  @db.VarChar(65)
  status      String  @db.VarChar(15) @default("pending")
  users_id    Int
  creation_date DateTime @default(now())      
  update_date   DateTime @updatedAt   
  user users @relation(fields: [users_id], references: [id])  
  payments payments[]
}
